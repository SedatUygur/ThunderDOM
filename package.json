  "author": {
    "name": "Sedat Uygur",
    "email": "sedat.uygur@outlook.com",
    "url": "https://github.com/SedatUygur"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SedatUygur/ThunderDOM/issues"
  },
  "homepage": "https://github.com/SedatUygur/ThunderDOM#readme",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/eslint-config-prettier": "^6.11.3",
